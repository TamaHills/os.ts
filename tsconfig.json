{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "outDir": "./build",
    "sourceRoot": "./src",
    "sourceMap": true,
    "allowJs": true,
    "target": "ES5",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "util/*": [
        "src/util/*"
      ],
      "os/*": [
        "src/os/*"
      ],
      "apps/*": [
        "src/apps/*"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    },
    "typeRoots": ["node_modules/@types", "types"],
  }
}